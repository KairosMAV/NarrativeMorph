# Book to Game Environment Configuration
# Copy this to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Alternative: Use OpenRouter for multiple model access
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# OPENAI_MODEL=openai/gpt-4-turbo-preview

# Replicate API Configuration
REPLICATE_API_TOKEN=your_replicate_api_token_here

# API Configuration
API_HOST=localhost
API_PORT=8000
LOG_LEVEL=INFO

# Development Settings
DEBUG=true
ENABLE_MOCK_RESPONSES=false

# Unity Project Settings
DEFAULT_UNITY_VERSION=2022.3.0f1
DEFAULT_TARGET_PLATFORMS=mobile,desktop,ar

# Performance Settings
MAX_CONCURRENT_AGENTS=4
API_TIMEOUT=300
MAX_TOKENS_PER_REQUEST=4000
