# 🔐 NarrativeMorph - Environment Variables
# Copy this file to .env and fill in your actual API keys

# 🤖 AI Service API Keys
OPENAI_API_KEY=your_openai_key_here
STABILITY_API_KEY=your_stability_key_here
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# 🗄️ Database Configuration
DATABASE_URL=postgresql+asyncpg://raguser:ragpass123@localhost:5432/narrative_morph
REDIS_URL=redis://localhost:6379

# 🌍 Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# 🎬 CogVideoX Configuration
COGVIDEO_MODEL_PATH=./models/cogvideox
COGVIDEO_DEVICE=cuda  # or cpu for CPU-only
GPU_MEMORY_FRACTION=0.8

# 📊 Application Settings
MAX_FILE_SIZE_MB=100
MAX_CONCURRENT_JOBS=5
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# 🎮 Unity Generation
UNITY_PROJECT_TEMPLATE_PATH=./templates/unity
UNITY_EXPORT_PATH=./media/unity-projects

# 📁 File Storage
UPLOAD_DIR=./uploads
MEDIA_DIR=./media
DATA_DIR=./data
TEMP_DIR=./temp

# 🔄 Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 🌐 CORS Settings (for development)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# 📈 Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=false

# 🎯 Demo Mode Settings
DEMO_MODE=true
DEMO_USER_ID=demo-user-001
DEMO_PROJECT_LIMIT=5
